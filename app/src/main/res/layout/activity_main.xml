<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dean.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/ad_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ad"/>

    <Button
        android:id="@+id/constraint_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="constraint"
        app:layout_constraintLeft_toRightOf="@id/ad_button"/>

    <Button
        android:id="@+id/server_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="server"
        app:layout_constraintLeft_toRightOf="@id/constraint_button"/>

    <Button
        android:id="@+id/swipback_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SwipBack"
        app:layout_constraintLeft_toRightOf="@id/server_button"/>

    <Button
        android:id="@+id/viewdrag_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="viewDrag"
        app:layout_constraintTop_toBottomOf="@id/ad_button"/>

    <Button
        android:id="@+id/live_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Live"
        app:layout_constraintLeft_toRightOf="@id/viewdrag_button"
        app:layout_constraintTop_toTopOf="@id/viewdrag_button"/>

    <Button
        android:id="@+id/count_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CountDown"
        app:layout_constraintLeft_toRightOf="@id/live_button"
        app:layout_constraintTop_toTopOf="@id/live_button"/>

    <Button
        android:id="@+id/gif_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GifView"
        app:layout_constraintLeft_toRightOf="@id/count_button"
        app:layout_constraintTop_toTopOf="@id/count_button"/>

    <Button
        android:id="@+id/fresco_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="fresco"
        app:layout_constraintTop_toBottomOf="@id/viewdrag_button"/>

    <Button
        android:id="@+id/think_android_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ThinkAndroid"
        app:layout_constraintLeft_toRightOf="@id/fresco_button"
        app:layout_constraintTop_toTopOf="@id/fresco_button"/>

    <Button
        android:id="@+id/bluetooth_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BlueBooth"
        app:layout_constraintLeft_toRightOf="@id/think_android_button"
        app:layout_constraintTop_toTopOf="@id/think_android_button"/>

</android.support.constraint.ConstraintLayout>
