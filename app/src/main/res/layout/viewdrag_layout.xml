<?xml version="1.0" encoding="utf-8"?>
<com.dean.viewdrag.MyViewDragHelper
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/viewdrag_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="#44ff0000"
        android:gravity="center"
        android:text="I can be dragged !"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/viewdrag_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="#4400ff00"
        android:gravity="center"
        android:text="I can be dragged !"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewdrag_1"/>

    <TextView
        android:id="@+id/viewdrag_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="#440000ff"
        android:gravity="center"
        android:text="I can be dragged !"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewdrag_2"/>
</com.dean.viewdrag.MyViewDragHelper>
